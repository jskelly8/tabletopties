<div class="container mobile">
    <h2 class="text-center mb-5">Add a New Game</h2>
    <div id="errorBox" class="alert alert-danger" role="alert" style="display: none;">
        <!-- Error message will be inserted here -->
    </div>
    <form id="addGameForm">
        <div class="row mb-3">
            <label for="title" class="col-sm-2 col-form-label col-form-label-lg">Title:</label>
            <div class="col-sm-10">
                <input type="text" id="title" name="title" placeholder="Game Title" class="form-control form-control-lg"
                    required>
            </div>
        </div>
        <div class="row mb-3">
            <label for="genre" class="col-sm-2 col-form-label col-form-label-lg">Genre:</label>
            <div class="col-sm-10">
                <input type="text" id="genre" name="genre" placeholder="Game Genre"
                    class="form-control form-control-lg">
            </div>
        </div>
        <div class="row mb-3">
            <label for="player_count" class="col-sm-2 col-form-label col-form-label-lg">Player Count:</label>
            <div class="col-sm-10">
                <input type="number" id="player_count" name="player_count" placeholder="Max number of players (#)"
                    class="form-control form-control-lg">
            </div>
        </div>
        <div class="row mb-3">
            <label for="avg_play_time" class="col-sm-2 col-form-label col-form-label-lg">Average Play Time (in
                minutes):</label>
            <div class="col-sm-10">
                <input type="number" id="avg_play_time" name="avg_play_time" placeholder="Number of minutes (#)"
                    class="form-control form-control-lg">
            </div>
        </div>
        <div class="row mb-3">
            <label for="description" class="col-sm-2 col-form-label col-form-label-lg">Description:</label>
            <div class="col-sm-10">
                <textarea id="description" name="description" placeholder="Game Description"
                    class="form-control form-control-lg" required></textarea>
            </div>
        </div>
        <div class="d-flex justify-content-center mb-5">
            <button type="submit" class="btn btn-danger">Add Game</button>
        </div>
    </form>
</div>
<script src="/js/addGame.js"></script>