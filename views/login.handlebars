<main class="container mobile">
    <h2 class="text-center mb-5">Login</h2>
    <form id="login" action="#" method="POST">
        <div class="row mb-3">
            <label for="email" class="col-sm-2 col-form-label col-form-label-lg">Email</label>
            <div class="col-sm-10">
                <input type="email" id="email" class="form-control form-control-lg" placeholder="email@example.com"
                    name="email" required>
            </div>
        </div>
        <div class="row mb-3">
            <label for="password" class="col-sm-2 col-form-label col-form-label-lg">Password</label>
            <div class="col-sm-10">
                <input type="password" id="password" class="form-control form-control-lg" placeholder="8 char pass"
                    name="password" required>
            </div>
        </div>
        <div class="d-flex justify-content-center mb-5">
            <button type="submit" class="btn btn-danger">Sign In</button>
        </div>
        <div class="d-flex justify-content-center">
            <span class="me-2">Dont have an account?</span>
            <a class="btn btn-outline-dark btn-sm" href="./signup">Sign Up</a>
        </div>
    </form>
</main>

<script src="./js/login.js"></script>