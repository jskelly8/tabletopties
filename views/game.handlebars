<main class="container mobile">
    <div class="text-center">
        <h1>{{title}}</h1>
        <div class="my-4 border-bottom border-2">
            <h3 class="text-danger">Genre</h3>
            <p class="fs-4">{{genre}}</p>
        </div>
        <div class="mb-4 border-bottom border-2">
            <h3 class="text-danger">Description</h3>
            <p class="fs-4">{{description}}</p>
            <div id="errorBox" class="alert alert-danger" role="alert" style="display: none;">
                <!-- Error message will be inserted here -->
            </div>
            <div>
                <button data-gameid="{{id}}" id="gameInterest" class="btn btn-danger btn-sm mb-4">I'm
                    Interested</button>
            </div>
        </div>
        <!-- Display interested users if available -->
        <div class="mb-4">
            <h3 class="text-danger mb-3">Interested Users</h3>
            <div class="d-flex justify-content-center">
                {{#if interested_users}}
                <ul class="list-group bg-dark col-sm-2 mb-3 mb-sm-0">
                    {{#each interested_users}}
                    <li class="list-group-item bg-dark text-light">
                        <a href="/users/{{this.id}}" class="text-light text-decoration-none">{{this.name}}</a>
                    </li>
                    {{/each}}
                </ul>
                {{else}}
                <p class="fs-4">No interested players yet.</p>
                {{/if}}
            </div>
        </div>
    </div>
</main>
<script src="/js/gameInterest.js"></script>